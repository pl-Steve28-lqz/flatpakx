%section#footer.bg-black
  .container
    .row
      .col-lg-3.col-lg-offset-1
        %a.navbar-brand.page-scroll{:href => "#page-top"} 
          =image_tag 'img/logo.svg', :title => 'Flatpack', :class => 'full'
      %ul.col-lg-7
        - data.menu.each do |i|
          %li.toplevel
            /id links on index page
            - if (current_page.path == 'index.html')
              = "<a class='page-scroll' href='#{i.link}'>#{i.title}</a>"
            - else
              - if (i.link.match('^#'))
                = "<a class='page-scroll' href='index.html#{i.link}'>#{i.title}</a>"
              - else
                = "<a class='page-scroll' href='#{i.link}'>#{i.title}</a>"
            - if !i.submenu.nil?
              %ul
                - i.submenu.each do |j|
                  %li
                    = "<a class='page-scroll' href='#{j.link}'>#{j.title}</a>"
